<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
        <style name="Theme.I大工" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_theme_color</item>
        <item name="colorPrimaryDark">@color/main_theme_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/main_theme_color</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/main_theme_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonStyle">@style/AppButton</item>
        <item name="autoCompleteTextViewStyle">@style/AppAutoCompleteTextView</item>
    </style>

    <style name="Theme.I大工.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="autoCompleteTextViewStyle">@style/AppAutoCompleteTextView</item>
    </style>
    <style name="bg_view">
        <item name="android:background">@drawable/bg_mine_panel</item>
    </style>>
    <style name="AppButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>