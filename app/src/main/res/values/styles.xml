<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="login_btn">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_bg_btn_login</item>
    </style>

    <style name="login_txt">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/selector_login_txt_color</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">20.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">20.0dip</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="main_menu_photo_anim">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="main_more_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>

    <!--修改searchView字体颜色、大小-->
    <style name="AppAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHighlightInverse">@color/white</item>
        <item name="android:textColorHintInverse">@color/white</item>
        <item name="android:textAppearance">@style/AutoCompleteTextAppearance</item>
    </style>

    <style name="AutoCompleteTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="appDetailItemTitleStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/text_color_88</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="appDetailItemStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/text_color_50</item>
        <item name="android:layout_marginLeft">16.0dip</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="tv_gift_detail">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff505050</item>
        <item name="android:lines">1</item>
    </style>

    <style name="tv_notice_desc_style">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/text_color_88</item>
        <item name="android:id">@id/tv_notice_desc</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:text">description</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="tv_notice_desc_style_lite" parent="@style/tv_notice_desc_style">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="tv_notice_desc_style_special" parent="@style/tv_notice_desc_style_lite">
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>

    <style name="tv_notice_time">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/text_color_ff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shape_notice_time_bg</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20.0dip</item>
        <item name="android:layout_marginTop">12.0dip</item>
        <item name="android:layout_marginBottom">6.0dip</item>
        <item name="android:text">time</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="tv_notice_title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text_color_50</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">21.0dip</item>
        <item name="android:text">title</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="tv_notice_title_lite" parent="@style/tv_notice_title">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="notice_card_view_bg" parent="@style/notice_card_view_special_bg">
        <item name="android:paddingBottom">12.0dip</item>
    </style>

    <style name="notice_card_view_special_bg">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/shape_bg_message_card_view</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">13.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6.0dip</item>
    </style>

    <style name="appCommentRatingBarYellow" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">10.0dip</item>
        <item name="android:progressDrawable">@drawable/star_rating_bar_yellow</item>
        <item name="android:minHeight">10.0dip</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="appCommentRatingBarGray" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">10.0dip</item>
        <item name="android:progressDrawable">@drawable/star_rating_bar_gray</item>
        <item name="android:minHeight">10.0dip</item>
    </style>

    <style name="appCommentRatingLevelStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">10.0dip</item>
        <item name="android:progressDrawable">@drawable/star_rating_bar_level</item>
        <item name="android:minHeight">10.0dip</item>
    </style>

    <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">32.0dip</item>
        <item name="android:progressDrawable">@drawable/app_comment_rating_bar</item>
        <item name="android:minHeight">32.0dip</item>
    </style>

    <style name="notice_check_box">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">16.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/item_notice_check_box_src</item>
    </style>

    <style name="notice_check_box_new">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">16.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/item_notice_check_box_src</item>
    </style>

    <style name="notice_item_root_style">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16.0dip</item>
        <item name="android:layout_marginRight">16.0dip</item>
    </style>

    <style name="iv_notice_big">
        <item name="android:layout_width">308.0dip</item>
        <item name="android:layout_height">171.0dip</item>
        <item name="android:layout_marginTop">12.0dip</item>
        <item name="android:src">@drawable/icon_notice_default</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="iv_notice_big_special" parent="@style/iv_notice_big">
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>

    <style name="gift_score_gift_name_style">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>
</resources>