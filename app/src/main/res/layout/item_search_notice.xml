<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/chat_list_info_panel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:orientation="vertical"
    android:paddingLeft="16.0dip"
    android:paddingTop="12.0dip">

    <TextView
        android:id="@id/tv_notice_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16.0dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_color_66"
        android:textSize="14.0dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="16.0dip"
        android:gravity="center_vertical">

        <TextView
            android:id="@id/tv_notice_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/shape_search_notice_type_bg"
            android:gravity="center_vertical"
            android:paddingLeft="6.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="6.0dip"
            android:paddingBottom="4.0dip"
            android:singleLine="true"
            android:text="站内信"
            android:textColor="@color/text_color_8d"
            android:textSize="12.0dip" />

        <TextView
            android:id="@id/tv_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="2019-01-08 18:55"
            android:textColor="@color/text_color_66"
            android:textSize="12.0dip"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@id/v_list_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="12.0dip"
        android:background="@color/background_color_dc" />
</LinearLayout>