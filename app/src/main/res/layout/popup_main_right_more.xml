<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginBottom="12.0dip"
        app:cardCornerRadius="8.0dip"
        app:cardElevation="4.0dip">

        <LinearLayout
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/btn_start_qr"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14.0dip"
                    android:button="@null"
                    android:drawablePadding="9.0dip"
                    android:includeFontPadding="false"
                    android:text="扫一扫"
                    android:textSize="14.0sp"
                    app:drawableStartCompat="@drawable/icon_qr_code"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/btn_start_virtual_card"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="14.0dip"
                    android:layout_marginRight="14.0dip"
                    android:background="#ffe0e0e0"
                    tools:ignore="PxUsage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_marginStart="14.0dip"
                    android:layout_weight="1.0"
                    android:drawablePadding="9.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="虚拟卡"
                    android:textSize="14.0sp"
                    app:drawableStartCompat="@drawable/icon_virtual_card"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>