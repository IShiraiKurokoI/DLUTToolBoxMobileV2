<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ServiceItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:id="@+id/App_Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                tools:ignore="ContentDescription,RtlSymmetry" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/center_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingStart="8dp"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/App_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/App_Describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NoticeItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@id/tv_notice_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_color_66"
            android:textSize="14.0sp" />

        <TextView
            android:id="@id/tv_notice_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_color_66"
            android:textSize="13.0sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@id/tv_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="2019-01-08 18:55"
                android:textColor="@color/text_color_66"
                android:textSize="12.0sp"
                android:visibility="visible"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@id/v_list_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/background_color_dc"
        tools:ignore="PxUsage" />
</LinearLayout>