<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.GiftShopActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:background="@color/main_theme_color"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:ignore="UselessParent">

        <TextView
            android:id="@id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="@string/back_to"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/notice_detail_back_sel" />

        <TextView
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="礼品商店"
            android:textColor="@color/white"
            android:textSize="18.0sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/header_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/head"
            android:layout_width="fill_parent"
            android:layout_height="85.0dip"
            android:background="@color/idg_theme_color">

            <ImageView
                android:id="@id/iv_score"
                android:layout_width="46.0dip"
                android:layout_height="46.0dip"
                android:layout_centerVertical="true"
                android:layout_marginStart="28.0dip"
                android:layout_marginEnd="18.0dip"
                android:src="@drawable/icon_coin_gift_home_header"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@id/tv_score_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_score"
                android:layout_toEndOf="@id/iv_score"
                android:includeFontPadding="false"
                android:text="当前积分"
                android:textColor="@color/white"
                android:textSize="14.0sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@id/tv_user_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_score_hint"
                android:layout_toEndOf="@id/iv_score"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24.0sp" />

            <ImageView
                android:layout_width="86.0dip"
                android:layout_height="75.0dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="30.0dip"
                android:src="@drawable/icon_gift_store_large"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <LinearLayout
            android:id="@id/ll_sort_panel"
            android:layout_width="fill_parent"
            android:layout_height="42.0dip"
            android:orientation="horizontal"
            android:paddingTop="1.0px"
            android:paddingBottom="1.0px"
            android:baselineAligned="false"
            android:visibility="gone"
            tools:ignore="PxUsage">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/list_item_bg"
                android:gravity="center">

                <TextView
                    android:id="@id/tv_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4.0dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="销量排序"
                    android:textColor="@color/text_color_50"
                    android:textSize="14.0sp"
                    app:drawableEndCompat="@drawable/icon_spinner_sel"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/list_item_bg"
                android:gravity="center">

                <TextView
                    android:id="@id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4.0dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="销量排序"
                    android:textColor="@color/text_color_50"
                    android:textSize="14.0sp"
                    app:drawableEndCompat="@drawable/icon_spinner_sel"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/list_item_bg"
                android:gravity="center">

                <TextView
                    android:id="@id/tv_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4.0dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="销量排序"
                    android:textColor="@color/text_color_50"
                    android:textSize="14.0sp"
                    app:drawableEndCompat="@drawable/icon_spinner_sel"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/list_item_bg"
                android:gravity="center">

                <TextView
                    android:id="@id/cb_store_type"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="4.0dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="仅看有货"
                    android:textColor="@color/text_color_50"
                    android:textSize="13.0sp"
                    app:drawableStartCompat="@drawable/cb_sort_sel"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/divider_color"
            tools:ignore="PxUsage" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/PresentList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="vertical"
            android:scrollbarSize="10dp"
            android:fadeScrollbars="false"/>
    </LinearLayout>
</LinearLayout>