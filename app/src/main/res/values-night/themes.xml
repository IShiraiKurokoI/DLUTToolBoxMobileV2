<resources>
    <!-- Base application theme. -->
    <style name="Theme.I大工" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_theme_color</item>
        <item name="colorPrimaryDark">@color/main_theme_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/main_theme_color</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" >true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/main_theme_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="autoCompleteTextViewStyle">@style/AppAutoCompleteTextView</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarDivider">@null</item>
        <!--         <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item> -->
        <item name="android:actionMenuTextColor">@color/main_theme_color</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarDivider">@null</item>
        <!--         <item name="actionBarTabStyle">@style/MyActionBarTabs</item> -->
        <item name="actionMenuTextColor">@color/main_theme_color</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/main_theme_color</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:backgroundStacked">@color/main_theme_color</item>

        <!-- Support library compatibility -->
        <item name="background">@color/main_theme_color</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="backgroundStacked">@color/main_theme_color</item>
        <item name="buttonStyle">@style/AppButton</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>